<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    <style name="ScrollView" parent="AppBaseTheme">
        <item name="android:background">@color/Yellow</item>
    </style>
    <style name="LinearLayout" parent="AppBaseTheme">
        <item name="android:background">@color/Black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="RelativeLayout" parent="AppBaseTheme">
        <item name="android:background">@color/Black</item>
    </style>
    <style name="TextView" parent="AppBaseTheme">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Spinner" parent="AppBaseTheme">
    </style>
    <style name="Button" parent="AppBaseTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>