<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        style="@style/RelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="320dp" >

        <!-- HEADER BEGINS -->
        
		<LinearLayout
			    android:id="@+id/header"
			    style="@style/HeaderStyle">
		</LinearLayout>
		
  		<LinearLayout
  		    	android:id="@+id/header_background"
  		    	android:layout_below="@id/header"
  		    	style="@style/HeaderBackgroundStyle">
  		</LinearLayout>

        <!-- HEADER ENDS -->
        
  		<!--FOOTER STARTS-->
  		
   		<LinearLayout
	  		    android:id="@+id/footer"
	  		    style="@style/FooterStyle" >
	  	</LinearLayout>
	  	
   		<LinearLayout
  		    	android:id="@+id/footer_background"
  		    	android:layout_above="@id/footer"
  		    	style="@style/FooterBackgroundStyle" >
  		</LinearLayout>  	

        <!-- FOOTER ENDS -->
        
        <!-- BODY BEGINS -->

        <LinearLayout
            style="@style/LinearLayout"
            android:layout_below="@id/header_background"
            android:orientation="vertical"
            android:padding="10dip" >
            
            <!-- USERNAME BEGINS -->
            
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="Username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Yellow" />

		    <TextView
		        style="@style/TextView"
		        android:id="@+id/name_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="The last known address will be here."
		        android:textSize="@dimen/text2"
		        android:layout_marginBottom="5dp" />
            
            <!-- USERNAME ENDS -->
		    
            <!-- LAST ADDRESS BEGINS -->
            
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="Last Address"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Yellow" />
            
		    <TextView
		        style="@style/TextView"
		        android:id="@+id/address_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="The last known address will be here."
		        android:textSize="@dimen/text2"
		        android:layout_marginBottom="5dp" />

            <!-- LAST ADDRESS ENDS -->
            
            <!-- LAST LOCATION BEGINS -->
            
             <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="Last Location"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Yellow" />
            
		    <TextView
		        style="@style/TextView"
		        android:id="@+id/location_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="The last known location will be here."
                android:textSize="@dimen/text2"
		        android:layout_marginBottom="5dp" />

            <!-- LAST LOCATION ENDS -->
            
            <!-- HAIL STATUS BEGINS -->
            
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="Hail Status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Yellow" />
            
		    <TextView
		        style="@style/TextView"
		        android:id="@+id/hail_status"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:text="Hail status will be shown here."
		        android:textSize="@dimen/text2"
		        android:layout_marginBottom="5dp" />

            <!-- HAIL STATUS ENDS -->
            
        </LinearLayout>
    </RelativeLayout>

</ScrollView>

